{
    "compilerOptions": {
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
        "target": "ESNext",
        "module": "CommonJS",
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src/**/*"]
}
